{% extends 'base.html.twig' %}

{% block title %}Update Password{% endblock %}


{% block body %}
<div class="container">
    <div class="d-block ">
        {{ form_start(form) }}
        {{ form_row(form.password,{'label':'Password','attr':{ 'placeholder':'Password' }})}}
        {{ form_row(form.confirmPassword,{'label':'Confirm Password','attr':{ 'placeholder':'Confirm your Password' }})}}
        <button type="submit"  class="btn btn-outline-success" >Modifier</button>
        {{ form_end(form) }}

    </div>
</div>
{% endblock %}
