<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!-- Titre et Icone -->
        {% block icon %} <link rel="icon" type="image/png" href="/image/Icone.png" >{% endblock %}
        <title>{% block title %}Welcome!{% endblock %}</title>

        <!-- Css -->
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('/css/GlobalStyle.css') }}">
        {% endblock %}
    </head>
    <body>


     <!-- Navbar Bootstrap -->
     {% block navbar %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path("user_profil") }}">VTB</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ">

                    {% if not app.user %}
                        <li class="nav-item">
                            <a class="nav-link d-inline" href="{{ path('security_login') }}">LogIn</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link d-inline" href="{{ path('security_logout') }}">LogOut</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    {% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
