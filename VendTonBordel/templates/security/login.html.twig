{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}


{% block body %}

    <h1 class="display-4 text-white py-5 text-center"> {{ controller_name }}</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <!--required veut dire que c'est obligé de mettre quelque chose-->
            <input placeholder="Username" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <!--required veut dire que c'est obligé de mettre quelque chose-->
            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}